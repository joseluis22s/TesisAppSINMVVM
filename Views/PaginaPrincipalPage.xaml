<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TesisAppSINMVVM.Views.PaginaPrincipalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PaginaPrincipalPage"
    NavigationPage.HasNavigationBar="False">
    <Grid
        HorizontalOptions="Center"
        RowDefinitions="Auto"
        VerticalOptions="Center">
        <ListView
            HasUnevenRows="True"
            ItemsSource="{Binding Opciones}"
            SeparatorVisibility="None"
            VerticalScrollBarVisibility="Never" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Margin="30,7" >
                            <Grid Padding="0" RowDefinitions="Auto,Auto">
                                <VerticalStackLayout>
                                    <Image MaximumHeightRequest="50" Source="{Binding Imagen}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="16"
                                        HorizontalOptions="Center"
                                        Text="{Binding Texto}" />
                                </VerticalStackLayout>

                            </Grid>
                            <Border.Background>
                                <LinearGradientBrush EndPoint="2,1">
                                    <GradientStop Offset="0.1" Color="#e8f2ff" />
                                    <GradientStop Offset="1.0" Color="#4e82d4" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>



    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,0">
            <GradientStop Offset="0.1" Color="#5d92e8" />
            <GradientStop Offset="1.0" Color="#044fc7" />
        </LinearGradientBrush>
    </ContentPage.Background>

</ContentPage>