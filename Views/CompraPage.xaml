<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TesisAppSINMVVM.Views.CompraPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:TesisAppSINMVVM.Models"
    Title="Compras">
    <Grid>
        <VerticalStackLayout x:Name="VerticalStackLayout_ProveedoresCompraPage">
            <Label Background="Red" Text="PROVEEDORES" />
            <Button
                x:Name="Button_AgregarProveedor"
                Clicked="Button_AgregarProveedor_Clicked"
                Text="Agregar nuevo" />
            <CollectionView x:Name="CollectionView_Proveedores" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Label x:Name="Label_NombreProveedor" Text="{Binding Nombre}" />
                            <Border.Background>
                                <LinearGradientBrush EndPoint="2,1">
                                    <GradientStop Offset="0.1" Color="#e8f2ff" />
                                    <GradientStop Offset="1.0" Color="#4e82d4" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow
                                    Brush="Black"
                                    Opacity="0.5"
                                    Radius="100"
                                    Offset="-20,0" />
                            </Border.Shadow>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        <VerticalStackLayout
            x:Name="VerticalStackLayout_OpcionesCompraPage"
            Padding="15"
            IsVisible="False"
            Spacing="15">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="7">
                <Button
                    x:Name="Button_NuevaCompra"
                    BackgroundColor="#3669bf"
                    Clicked="Button_NuevaCompra_Clicked"
                    CornerRadius="25"
                    FontSize="16"
                    Text="Nueva compra" />
                <Button
                    x:Name="Button_Historial"
                    Grid.Column="1"
                    BackgroundColor="#3669bf"
                    Clicked="Button_Historial_Clicked"
                    CornerRadius="25"
                    FontSize="16"
                    Text="Historial compras" />
            </Grid>

            <ContentView
                x:Name="ContentView_CompraPageContenidoDinamico"
                Padding="10"
                BackgroundColor="#d9d9d9" />
        </VerticalStackLayout>
    </Grid>


    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0.1,0.9">
            <GradientStop Offset="0.1" Color="#5d92e8" />
            <GradientStop Offset="1.0" Color="#044fc7" />
        </LinearGradientBrush>
    </ContentPage.Background>

</ContentPage>