<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TesisAppSINMVVM.Contents.NuevaCompraContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Loaded="ContentView_Loaded">
    <!--<Grid>-->
    <Grid
        ColumnDefinitions="*,auto"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
        RowSpacing="7">
        <Label
            Grid.ColumnSpan="2"
            Padding="0,2"
            BackgroundColor="#9e9e9e"
            FontAttributes="Bold"
            FontSize="18"
            HorizontalTextAlignment="Center"
            Text="NUEVA COMPRA" />

        <VerticalStackLayout Grid.Row="1">
            <Label Style="{StaticResource LabelStyle}" Text="Producto" />
            <Border>
                <Grid>
                    <Picker
                        x:Name="Picker_Producto"
                        Margin="10,0"
                        FontSize="16"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        ItemDisplayBinding="{Binding PRODUCTO}" />
                    <Border x:Name="Border_OcultaPicker">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Border_TapGestureRecognizer_Tapped" />
                        </Border.GestureRecognizers>
                    </Border>
                </Grid>
            </Border>
        </VerticalStackLayout>

        <Button
            x:Name="Button_AgregarProductoPicker"
            Grid.Row="1"
            Grid.Column="2"
            Margin="5,7,20,0"
            Padding="7"
            Clicked="Button_AgregarNuevoProductoPicker_Clicked"
            ImageSource="pencil_edit_icon.png"
            MaximumHeightRequest="30"
            VerticalOptions="Center" />

        <VerticalStackLayout Grid.Row="2">
            <Label Style="{StaticResource LabelStyle}" Text="Precio" />
            <Border>
                <Entry
                    x:Name="Entry_Precio"
                    Keyboard="Numeric"
                    TextChanged="Entry_Precio_TextChanged" />
            </Border>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3">
            <Label Style="{StaticResource LabelStyle}" Text="Cantidad" />
            <Border>
                <Entry
                    x:Name="Entry_Cantidad"
                    Keyboard="Numeric"
                    TextChanged="Entry_Cantidad_TextChanged" />
            </Border>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="4">
            <Label Style="{StaticResource LabelStyle}" Text="Valor Total" />
            <Border>
                <Label
                    x:Name="Label_ValorTotal"
                    Margin="10,0"
                    FontSize="16"
                    HeightRequest="40"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center" />
            </Border>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="5">
            <Label Style="{StaticResource LabelStyle}" Text="Saldo Pendiente" />
            <Border>
                <Entry
                    x:Name="Entry_SaldoPendiente"
                    Keyboard="Numeric"
                    TextChanged="Entry_SaldoPendiente_TextChanged" />
            </Border>
        </VerticalStackLayout>

        <Button
            x:Name="Button_GuardarNuevaCompra"
            Grid.Row="6"
            Grid.ColumnSpan="2"
            Margin="0,5,0,-2"
            Padding="40,0"
            BackgroundColor="#2b5499"
            Clicked="Button_GuardarNuevaCompra_Clicked"
            CornerRadius="10"
            FontSize="16"
            HorizontalOptions="Center"
            Text="Guardar" />

    </Grid>
